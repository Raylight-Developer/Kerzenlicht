#version 460
#extension GL_ARB_gpu_shader_int64: enable
#include "Globals.comp"

vec4 shadeHit(inout Hit hit) {

	switch (hit.material) {
		case 0: { // Material Name: Gold
			// Glsl Shader Code OR Generated Code from Material Nodes
			return vec4(1.0, 0.5, 1.0, 1.0);
		}
	}

	// ERROR:
	hit.error = true;
	return vec4(1, 0, 1, 1);
}
struct Triangle {
	vec3 pos_a;
	vec3 normal_a;
	vec2 uv_a; // 32
	vec3 pos_b;
	vec3 normal_b;
	vec2 uv_b; // 64
	vec3 pos_c;
	vec3 normal_c;
	vec2 uv_c; // 96
};

struct Bvh {
	vec3 p_min;
	uint pointer;   // 16
	vec3 p_max;
	uint tri_count; // 32 // If == 0, pointer leads to other Bvh Node, else leads to Triangle Start Index
};

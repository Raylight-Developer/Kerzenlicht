{
	"name": "kerzenlicht-language",
	"displayName": "Kerzenlicht Language",
	"description": "Syntax Highlighting for .krz files in VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "Kerz",
				"aliases": [
					"Kerzenlicht",
					"krz"
				],
				"extensions": [
					".krz"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "Kerz",
				"scopeName": "source.krz",
				"path": "./syntaxes/krz.tmLanguage.json"
			}
		],
		"configurationDefaults": {
			"editor.insertSpaces": false,
			"editor.tokenColorCustomizations": {
				"textMateRules": [
					{
						"scope": "source.krz",
						"settings": {
							"foreground": "#ffffff"
						}
					},
					{
						"scope": "kerz.section.squiggly",
						"settings": {
							"foreground": "#ff6b6b"
						}
					},
					{
						"scope": "kerz.section.section",
						"settings": {
							"foreground": "#5e9cce"
						}
					},
					{
						"scope": "kerz.section.type",
						"settings": {
							"foreground": "#dea6ff"
						}
					},
					{
						"scope": "kerz.section.separator",
						"settings": {
							"foreground": "#909090"
						}
					},
					{
						"scope": "kerz.section.size",
						"settings": {
							"foreground": "#ffd700"
						}
					},
					{
						"scope": "kerz.float",
						"settings": {
							"foreground": "#f0aa8f"
						}
					},
					{
						"scope": "kerz.float.vector",
						"settings": {
							"foreground": "#a3f281"
						}
					},
					{
						"scope": "kerz.integer",
						"settings": {
							"foreground": "#b98c7a"
						}
					},
					{
						"scope": "kerz.integer.vector",
						"settings": {
							"foreground": "#90cb58"
						}
					},
					{
						"scope": "kerz.integer.index",
						"settings": {
							"foreground": "#6fe2ff"
						}
					},
					{
						"scope": "kerz.integer.pointer",
						"settings": {
							"foreground": "#989575"
						}
					},
					{
						"scope": "kerz.boolean",
						"settings": {
							"foreground": "#b46f54"
						}
					},
					{
						"scope": "kerz.name",
						"settings": {
							"foreground": "#ff60ba"
						}
					},
					{
						"scope": "kerz.comment",
						"settings": {
							"foreground": "#818d89"
						}
					}
				]
			}
		}
	}
}
{
	"name": "Kerz",
	"fileTypes": [
		"krz"
	],
	"scopeName": "source.krz",
	"patterns": [
		{
			"name": "kerz.section.squiggly",
			"match": "[ ]*[└┌]"
		},
		{
			"name": "kerz.section.section",
			"match": "(?<=[└┌])\\S+[^() ]+"
		},
		{
			"name": "kerz.section.type",
			"match": "(?<=\\bType\\b)[ ]*([^\\s]+)"
		},
		{
			"name": "kerz.section.type",
			"match": "(?<= :: )[^ ::]+"
		},
		{
			"name": "kerz.section.separator",
			"match": "( :: )"
		},
		{
			"name": "kerz.section.size",
			"match": "(?<=^[ ]*┌[^()]*?)\\([ ]*[0-9]+[ ]*\\)"
		},
		{
			"name": "kerz.integer.pointer",
			"match": "\\*[ ][0-9]+([ ]|)"
		},
		{
			"name": "kerz.integer.index",
			"match": "\\[[ ]*([0-9]+)[ ]*\\]"
		},
		{
			"name": "kerz.integer.index",
			"match": "(?<=[ ]*\\*[ ][0-9]*[ ]*)([0-9]+(?:[ ]+[0-9]+)*?)[ ]*?(?=\\*[ ][0-9]*[ ]*)"
		},
		{
			"name": "kerz.integer.index",
			"match": "^[ ]*[+-]?[0-9]+(?!\\.[0-9])(?=.*\\b[+-]?[0-9]*(\\.[0-9]+)?\\b)"
		},
		{
			"name": "kerz.float",
			"match": "[+-]?[0-9]*\\.[0-9]+[[e]?[+-]?[0-9]+]?"
		},
		{
			"name": "kerz.float.vector",
			"match": "[ ]*\\([ ]*([^\\)]*)[ ]*\\)[ ]*"
		},
		{
			"name": "kerz.integer",
			"match": "[+-]?[0-9]+(?!\\.[0-9])"
		},
		{
			"name": "kerz.integer.vector",
			"match": "\\[\\s*(-?\\d+\\s+){1,}(-?\\d+)\\s*\\]"
		},
		{
			"name": "kerz.boolean",
			"match": "[ ]*(False)[ ]*"
		},
		{
			"name": "kerz.boolean",
			"match": "[ ]*(True)[ ]*"
		},
		{
			"name": "kerz.name",
			"match": "(?<=^[ ]*[└┌].*\\][ ]*)[ ].*"
		},
		{
			"name": "kerz.comment",
			"match": "\\/\\*[\\s\\S]*?\\*\\/"
		},
		{
			"name": "kerz.comment",
			"match": "\\/\\/.*"
		}
	]
}
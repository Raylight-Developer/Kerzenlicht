void f_unpackUint(in uint bits, out uint low, out uint high) {
	low = bits & 0xFFFFu;
	high = (bits >> 16u) & 0xFFFFu;
}

void f_unpackUint(in uint bits, out float low, out float high) {
	uint lowBits = bits & 0xFFFFu;
	uint highBits = (bits >> 16u) & 0xFFFFu;
	
	low = uintBitsToFloat(lowBits);
	high = uintBitsToFloat(highBits);
}

